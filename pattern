to print a pattern like
if n==5:


1 2 3 4 5
10 9 8 7 6 
11 12 13 14 15 
20 19 18 17 16
21 22 23 24 25

#include<iostream>
using namespace std;
int main()
{
	int n,a;
	cin>>n;
//	int sq=n*n;
	int count=1;
	for(int i=0;i<n;i++)
	{
		for(int j=0;j<n;j++)
		{
			if(i%2==0)
			{
				cout<<count++<<" ";
//				cout<<"**"<<count<<"**";
				a=count+(n-1);
			}
			else{
				cout<<a--<<" ";
				count=a+(n+1);
			}
		}
		cout<<endl;
	}
	return main();
}


